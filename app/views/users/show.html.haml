- provide :title, "#{@user.name} (@#{@user.username})"

.container.d-flex.flex-column.align-items-center
  .text-start.mt-3.w-50
    %h1.mb-0= @user.name
    %h3.mb-3= @user.username
    %p= @user.about

  - if current_user == @user
    = link_to 'Edit profile', edit_user_path, class: 'btn btn-light'
    = link_to 'Log out', destroy_user_session_path, data: { "turbo-method": :delete }, class: 'btn btn-light'
