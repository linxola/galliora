:css
  .container {
    text-align: center;
    display: flex;
    justify-content: center;
  }

  .content {
    max-width: 500px;
    margin: 1rem auto;
  }

  .frame {
    border: 1px solid #d3d3d3;
    border-radius: 0.375rem;
    padding: 0 1.5rem;
  }

  .btn-black {
    margin: 1.5rem auto;
  }

  .btn-black a {
    background-color: black;
    color: white;
    padding: 1rem;
    text-decoration: none;
    white-space: normal;
    border-radius: 0.375rem;
  }
