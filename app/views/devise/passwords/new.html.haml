- provide :title, 'Forgot your password?'

.bg-blur= render 'shared/background_image'

.content-center.auth-form
  %h2 Forgot your password?

  - if flash[:notice]
    .success-feedback
      %i.bi.bi-check-circle
      = flash[:notice]

  = form_for(resource, as: resource_name, html: { method: :post },
                       url: password_path(resource_name),
                       data: { controller: 'form-validation',
                               action: 'form-validation#submitPasswordForm' }) do |f|
    .form-floating#email_form
      = f.text_field :email, autofocus: true, autocomplete: 'email', class: 'form-control',
                             placeholder: 'Email'
      = f.label :email
    = render 'devise/shared/error_messages', resource:, field: :email

    = f.submit 'Send me reset password instructions', class: 'btn btn-light'
